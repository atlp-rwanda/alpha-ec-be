    "eslint-plugin-mocha": "^10.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "istanbul": "^0.4.5",
    "lint-staged": "^15.2.2",
    "mocha": "^10.4.0",
