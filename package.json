{
  "name": "alpha-ec-be",
  "version": "1.0.0",
  "description": "alpha team project",
  "main": "index.js",
  "scripts": {
    "test": "tsc && npm run demigrate && npm run migrate && npm run seed && npm run test:coverage",
    "test:coverage": "cross-env NODE_ENV=test nyc --reporter=text --reporter=lcov mocha --require ts-node/register test/*.ts --coverage",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "cross-env NODE_ENV=production tsc && npm run migrate && npm run seed",
    "start": "cross-env NODE_ENV=production node ./dist/server.js",
    "migrate": "sequelize db:migrate ",
    "demigrate": "sequelize db:migrate:undo:all",
    "seed": "sequelize db:seed:all",
    "coverage": "nyc --reporter=text npm run test --coverage",
    "lint": "eslint .",
    "prettier": "prettier --check .",
    "lint:staged": "lint-staged",
    "lint:fix": "eslint . --fix",
    "prettier:fix": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prepare": "husky install"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "npm run lint:fix && npm run prettier:fix && cross-env NODE_ENV=development tsc && node ./dist/server.js"
  },
  "author": "alpha atlp team",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
