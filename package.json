  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "uuid": "^9.0.1",
    "winston": "^3.13.0"
  },
  "nyc": {
    "check-coverage": true,
    "per-file-ignores": [
      "src/config/*",
      "src/database/*"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "src/database/*",
      "src/config/*",
      "src/utils/logger.ts",
      "src/utils/cloud.ts",
      "src/helper/excOperation.ts",
      "src/helper/productQueries.ts",
      "src/middleware/fileUpload.ts",
      "src/utils/cloud.ts"
    ]
  }
